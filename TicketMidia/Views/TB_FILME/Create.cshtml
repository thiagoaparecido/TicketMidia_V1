@model TicketMidia.Models.TB_FILME

@{
    ViewBag.Title = "Create";
}

<h2>Novo Filme</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <br />
        @Html.ValidationSummary(true ,"" ,new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Código Ancine</label>
            <label class="radio-inline">
                &nbsp;&nbsp;&nbsp;&nbsp;
                <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1" checked> ROE / CPB
                @Html.EditorFor(model => model.FIL_CD_ANCINE ,new { htmlAttributes = new { @class = "form-control input-sm" ,maxlength = "14" } })
            </label>
            <label class="radio-inline">
                &nbsp;&nbsp;&nbsp;&nbsp;
                <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2"> Código Genérico
                <select name="FIL_COD_GEN" class="form-control input-sm" id="FIL_COD_GEN" style="text-align:center">
                    <option value="G4">Mostras e Festivais</option>
                    <option value="G2">Shows e Musicais</option>
                    <option value="G1">Eventos Esportivos</option>
                    <option value="G3">Jogos Eletrônicos</option>
                </select>
            </label>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Distribuidora</label>
            <div class="col-md-10">
                @Html.DropDownList("DIS_CNPJ" ,null ,htmlAttributes: new { @class = "form-control input-sm" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nome do Filme</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FIL_NM ,new { htmlAttributes = new { @class = "form-control input-sm", maxlength = "50" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nacionalidade</label>
            <div class="col-md-4">
                <select name="FIL_ID_NACIO" class="form-control input-sm" id="FIL_ID_NACIO">
                    <option value="E">Estrangeiro</option>
                    <option value="N">Nacional</option>
                </select>
                @Html.ValidationMessageFor(model => model.FIL_ID_NACIO ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.FIL_DIGITAL ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.FIL_DIGITAL ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FIL_DIGITAL ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden>
