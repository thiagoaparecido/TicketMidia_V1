                @Html.EditorFor(model => model.FIL_MOT_DES ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FIL_MOT_DES ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="text-align:right">
                <a href="/TB_FILME" class="btn btn-default btn-md" role="button">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success btn-md" id="btnSalvar" name="btnSalvar"/>
            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {

            $('#btnSalvar').click(function ()
            {
                var element2 = document.getElementById('inlineRadio1');
                if (element2.checked == true) {
                    var element3 = document.getElementById('FIL_CD_ANCINE');
                    if (element3.value == "") {
                        alert("Informar o ROE ou CPB da Obra");
                        return false;
                    }
                }

                var element3 = document.getElementById('FIL_CD_ANCINE');
                if (element3.length < 14) {
                    alert("O ROE ou CPB da Obra deve possuir 14 caracteres.");
                    return false;
                }

                var element = document.getElementById('FIL_NM');
                if (element.value == "") {
                    alert("Informar o nome da Obra (Filme)");
                    return false;
                }
            })

            $('#btnTeste').click(function () 
            {
                var element4 = document.getElementById('FIL_CD_ANCINE');
                element4.alert.length;
            })
        });
    </script>

}
