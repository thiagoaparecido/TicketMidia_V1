@model TicketMidia.Models.TB_DISTRIBUIDORA

<h3>Alteração de Distribuidora</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true ,"" ,new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">CNPJ</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.DIS_CNPJ ,new { htmlAttributes = new { @class = "form-control" ,@readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Distribuidora</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIS_NM ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIS_NM ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.DIS_DT_INC ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIS_DT_INC ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIS_DT_INC ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.DIS_DT_ALT ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIS_DT_ALT ,new { htmlAttributes = new { @Value = DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss") } })
                @*@Html.ValidationMessageFor(model => model.DIS_DT_ALT, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.DIS_DT_DES ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIS_DT_DES ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIS_DT_DES ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.DIS_MOT_DES ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIS_MOT_DES ,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIS_MOT_DES ,"" ,new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="text-align:right">
                <a href="/TB_DISTRIBUIDORA" class="btn btn-default btn-md" role="button">Voltar</a>
                <input type="submit" value="Salvar" id="Salvar" class="btn btn-success btn-md" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
