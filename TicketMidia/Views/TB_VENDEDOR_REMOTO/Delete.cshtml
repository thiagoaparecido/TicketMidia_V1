@model TicketMidia.Models.TB_VENDEDOR_REMOTO

@{
    ViewBag.Title = "Delete";
}

<h3>Tem certeza que deseja excluir este Vendedor Remoto?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vendedor Remoto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VRE_RZ_SOCIAL)
        </dd>

        <dt>
            Exibidor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TB_EMPRESA_COMPLEXO.EMP_RZ_SOCIAL)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:right">
            <a href="/TB_VENDEDOR_REMOTO" class="btn btn-default btn-md" role="button">Voltar</a>
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    }
</div>
