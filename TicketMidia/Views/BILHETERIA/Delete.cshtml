@model TicketMidia.Models.TB_BILHETERIA

@{
    ViewBag.Title = "Delete";
}

<h3>Exclusão</h3>

<h3>Tem certeza que deseja excluir esta Renda lançada ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Dia Cinematográfico</label>
        </dt>

        <dd>
            @ViewBag.BIL_DIA_CIN
        </dd>

        <dt>
            <label>Sala</label>
        </dt>

        <dd>
            @ViewBag.SAL_DESC
        </dd>

        <dt>
            <label>Obra</label>
        </dt>

        <dd>
            @ViewBag.SEA_FIL_NM
        </dd>

        <dt>
            <label>Horário Início Sessão</label>
        </dt>

        <dd>
            @ViewBag.SEA_DT_HR_INICIO
        </dd>

        <dt>
            <label>Houve Sessão</label>
        </dt>

        <dd>
            @ViewBag.BIL_HOUVE_SES
        </dd>

        <dt>
            <label>Retificadora</label>
        </dt>

        <dd>
            @ViewBag.BIL_RETIF
        </dd>

    </dl>

    <div hidden="hidden">
        <input id="BIL_ID" name="BIL_ID" value="@ViewBag.BIL_ID"/>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:right">
            <button class="btn btn-default btn-sm" id="btnVoltar" name="btnVoltar" onclick="goBack()">Voltar</button>
            <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
        </div>
    }
</div>
